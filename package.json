{
  "name": "@semifluid-finance/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "react-app:build": "yarn workspace @/react-app build --max-old-space-size=12288",
    "react-app:eject": "yarn workspace @/react-app eject",
    "react-app:start": "yarn workspace @/react-app start",
    "react-app:test": "yarn workspace @/react-app test",
    "build": "yarn workspace @/react-app build --max-old-space-size=12288",
    "prettier": "yarn workspace @/react-app prettier",
    "chain": "yarn workspace @/hardhat chain",
    "fork": "yarn workspace @/hardhat fork",
    "node": "yarn workspace @/hardhat chain",
    "test": "yarn workspace @/hardhat test",
    "testPrint": "yarn workspace @/hardhat testPrint",
    "start": "yarn workspace @/react-app start",
    "compile": "yarn workspace @/hardhat compile",
    "deploy": "yarn workspace @/hardhat deploy ",
    "watch": "yarn workspace @/hardhat watch",
    "accounts": "yarn workspace @/hardhat accounts",
    "balance": "yarn workspace @/hardhat balance",
    "send": "yarn workspace @/hardhat send",
    "ipfs": "yarn workspace @/react-app ipfs",
    "surge": "yarn workspace @/react-app surge",
    "s3": "yarn workspace @/react-app s3",
    "ship": "yarn workspace @/react-app ship",
    "generate": "yarn workspace @/hardhat generate",
    "account": "yarn workspace @/hardhat account",
    "mineContractAddress": "yarn workspace @/hardhat mineContractAddress",
    "wallet": "yarn workspace @/hardhat wallet",
    "fundedwallet": "yarn workspace @/hardhat fundedwallet",
    "flatten": "yarn workspace @/hardhat flatten",
    "clean": "yarn workspace @/hardhat clean",
    "mintNFT": "yarn workspace @/hardhat mintNFT",
    "createFlow": "yarn workspace @/hardhat createFlow",
    "updateFlow": "yarn workspace @/hardhat updateFlow",
    "deleteFlow": "yarn workspace @/hardhat deleteFlow",
    "readData": "yarn workspace @/hardhat readData",
    "run-graph-node": "yarn workspace @/services run-graph-node",
    "remove-graph-node": "yarn workspace @/services remove-graph-node",
    "clean-graph-node": "yarn workspace @/services clean-graph-node",
    "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph-codegen": "yarn workspace @/subgraph graph codegen",
    "graph-build": "yarn workspace @/subgraph graph build",
    "graph-create-local": "yarn workspace @/subgraph graph create --node http://localhost:8020/ /your-contract",
    "graph-remove-local": "yarn workspace @/subgraph graph remove --node http://localhost:8020/ /your-contract",
    "graph-deploy-local": "yarn workspace @/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 /your-contract",
    "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local",
    "theme": "yarn workspace @/react-app theme",
    "watch-theme": "yarn workspace @/react-app watch"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/hardhat",
      "**/hardhat/**",
      "**/hardhat-ts",
      "**/hardhat-ts/**"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@superfluid-finance/ethereum-contracts": "^1.1.0",
    "@uma/core": "^2.4.0",
    "ganache-cli": "^6.12.2",
    "yarn": "^1.22.15"
  }
}
